<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:clickable="false"
    android:columnCount="6"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="horizontal"
    android:useDefaultMargins="true" >

    <EditText
        android:id="@+id/result"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill"
        android:layout_row="0"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="right"
        android:inputType="none" 
        android:text="0">

    </EditText>
    
    <Button
        android:id="@+id/clearButton"
        android:layout_gravity="left|center_vertical"
        android:layout_row="0"
        android:onClick="clearDisplay"
        android:text="Clear" />
    
    <Button
        android:id="@+id/digitOne"
        android:onClick="appendDigit"
        android:text="1" />

    <Button 
        android:id="@+id/digitTwo"
        android:onClick="appendDigit"
        android:text="2" />

    <Button 
        android:id="@+id/digitThree"
        android:onClick="appendDigit"
        android:text="3" />

    <Button 
        android:id="@+id/digitFour"
        android:onClick="appendDigit"
        android:text="4" />
    
    <Button 
        android:id="@+id/plusOperation"
        android:onClick="defineOperation"
        android:text="+" />
    
    <Button 
        android:id="@+id/subtractionOperation"
        android:onClick="defineOperation"
        android:text="-" />
    
    <Button 
        android:id="@+id/digitFive"
        android:onClick="appendDigit"
        android:text="5" />

    <Button 
        android:id="@+id/digitSix"
        android:onClick="appendDigit"
        android:text="6" />

    <Button 
        android:id="@+id/digitSeven"
        android:onClick="appendDigit"
        android:text="7" />

    <Button 
        android:id="@+id/digitEight"
        android:onClick="appendDigit"
        android:text="8" />
    <Button 
        android:id="@+id/multiplicationOperation"
        android:onClick="defineOperation"
        android:text="*" />
    
    <Button 
        android:id="@+id/divisionOperation"
        android:onClick="defineOperation"
        android:text="/" />
    
    <Button 
        android:id="@+id/digitNine"
        android:onClick="appendDigit"
        android:text="9" />


    <Button 
        android:id="@+id/digitZero"
        android:onClick="appendDigit"
        android:text="0" />
 
	<Button 
        android:id="@+id/dot"
        android:onClick="appendDot"
        android:text="." />
    
    <Button 
        android:id="@+id/equal"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:onClick="performOperation"
        android:text="="
         />

</GridLayout>
